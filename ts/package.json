{
  "name": "crud-kata",
  "version": "0.1.0",
  "description": "CRUD kata for practicing refactoring",
  "main": "src/main.ts",
  "type": "module",
  "author": "Codefreeze",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "build:w": "tsc --watch",
    "build:test": "tsc -p tsconfig.test.json",
    "lint": "eslint -- src test",
    "lint:fix": "eslint --fix -- src test",
    "start": "yarn clean && tsc && node dist/main.js",
    "start:w": "nodemon dist/main.js",
    "test": "env TS_NODE_PROJECT='./tsconfig.test.json' mocha -r ts-node/register --import=./test/register.js 'test/**/*.ts'",
    "update-linter": "yarn cache clean && yarn remove eslint-config && yarn add --dev ../eslint/eslint-config-v1.0.0.tgz"
  },
  "devDependencies": {
    "@crud-kata/eslint-base": "../eslint/crud-kata-eslint-base-v0.1.2.tgz",
    "@stylistic/eslint-plugin": "^2.10.0",
    "@types/chai": "^5.0.1",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.6",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-plugin-mocha": "^10.5.0",
    "esm": "^3.2.25",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "dependencies": {
    "express": "^4.21.2",
    "uuid": "^11.0.5"
  }
}
